    <p>House Boat</p>
  </div>

  <div class="tax-toogle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>
<form method="get" action="/listings/new"></form>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        height="300rem"
        alt="listing_image"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <h5 class="card-title"><b><%= listing.title %></b></h5>

        <% if (listing.price) { %>
        <p class="card-text">
          &#8377;<%= listing.price.toLocaleString("en-IN") %> /night &nbsp; &nbsp; <i class="tax-info">+ 18% GST</i>
        </p>
        <% } else { %>
        <p class="card-text">Price not available</p>
        <% } %>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let tax = document.getElementById("flexSwitchCheckDefault");
  let taxInfo = document.getElementsByClassName("tax-info");
  
  tax.addEventListener("click", () => {
    for (let info of taxInfo) {  // Use for...of to iterate over HTMLCollection
      if (info.style.display != "inline") {
        console.log("not inline");
        info.style.display = 'inline';
      } else {
        console.log("inline");
        info.style.display = 'none'; 
      }
    }
  });
</script>