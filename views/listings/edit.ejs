<% layout("/layout/boilerplate") %>
<div class="row mt-3 offset-2">
  <div class="col-8">
    <h2>Edit Listing</h2>
    <form
      method="post"
      action="/listings/<%= listing._id%>?_method=PUT"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div>
        <label Title for="title" class="form-label">Enter Title</label>
        <input
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div>
        <label Title for="description" class="form-label" required
          >Enter description</label
        >

        <textarea name="listing[description]" class="form-control" required>
<%= listing.description %></textarea
        >
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label Title for="price" class="form-label">Enter Price</label>
          <input
            name="listing[price]"
            value="<%= listing.price %>"
            type="text"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3 col-md-8">
          <label Title for="country" class="form-label">Enter Country</label>
          <input
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
            class="form-control"
            required
          />
        </div>
      </div>

      <div>
        <label Title for="Image" class="form-label">Upload New Image</label>
        <input
          name="listing[image][url]"
          value="<%= listing.image.url %>"
          type="file"
          class="form-control"
        />
      </div>
      <div>
        <label Title for="location" class="form-label">Enter Location</label>
        <input
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-dark mt-3 add-btn">Edit</button>
    </form>
  </div>
</div>
