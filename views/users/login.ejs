
<% layout("/layout/boilerplate") %>

<h1 class="offset-3">Login to Wanderlust</h1>

<div class="row mt-3 offset-3">
    <div class="col-6">
    <form method="post" action="/login"  class="needs-validation" novalidate >
<div>
    <div class="mb-3">
    <label Title for="username" class="form-label">Username</label>
    <input
      name="username"
      id="username"
      type="text"
      class="form-control"
      required
    />
</div>

<div class="mb-3">
    <label Title for="password" class="form-label"> Password</label>
    <input
      name="password"
      id="password"
      type="password"
      class="form-control"
      required
    />
</div>

<div class="mb-3">
    <button class="btn btn-success">Login</button>
</div>

    </form>
  </div>
  </div>
  </div>